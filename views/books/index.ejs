<h2>Search Books</h2>
<form action="/books" method="GET">
  <div>
    <label>Name</label>
    <input type="text" name="title" value="<%= searchOptions.title %>" />
  </div>
  <div>
    <label>Publiched Before</label>
    <input
      type="date"
      name="publishedBefore"
      value="<%= searchOptions.publishedBefore %>"
    />
  </div>
  <div>
    <label>Publiched After</label>
    <input
      type="date"
      name="publishedAfter"
      value="<%= searchOptions.publishedAfter %>"
    />
  </div>
  <button type="submit">Search</button>
</form>
<div>
  <% books.forEach(book => { %>
  <img height="150" width="100" src="<%= book.coverImagePath %>" />
  <% }) %>
</div>
